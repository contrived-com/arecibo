{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "arecibo/schemas/ingest/announce/1.0.0",
  "allOf": [
    {
      "$ref": "../common/transponder-envelope.1.0.0.json"
    }
  ],
  "type": "object",
  "required": ["runtime"],
  "properties": {
    "eventType": {
      "const": "announce"
    },
    "runtime": {
      "type": "object",
      "required": ["transponderPid", "transponderVersion"],
      "properties": {
        "transponderPid": {
          "type": "integer",
          "minimum": 1
        },
        "transponderVersion": {
          "type": "string"
        },
        "pythonVersion": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
