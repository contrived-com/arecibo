{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "arecibo/schemas/ingest/app-event/1.0.0",
  "type": "object",
  "required": [
    "ts",
    "type",
    "payload"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "severity": {
      "type": "string",
      "enum": ["debug", "info", "warn", "error"]
    },
    "traceId": {
      "type": "string"
    },
    "spanId": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
