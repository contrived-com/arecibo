{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "arecibo/schemas/policy/policy-response/1.0.0",
  "type": "object",
  "required": [
    "schemaVersion",
    "transponderSessionId",
    "fetchedAt",
    "ttlSec",
    "policy"
  ],
  "properties": {
    "schemaVersion": {
      "const": "1.0.0"
    },
    "transponderSessionId": {
      "type": "string",
      "minLength": 1
    },
    "fetchedAt": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    },
    "ttlSec": {
      "type": "integer",
      "minimum": 5
    },
    "policy": {
      "$ref": "./policy.1.0.0.json"
    }
  },
  "additionalProperties": false
}
